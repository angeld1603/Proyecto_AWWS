@model IEnumerable<CapaEntidad.Citas>

@{
    ViewBag.Title = "Gestionar Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Gestionar Citas</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Fecha y Hora</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Cliente</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.FechaHora.ToString("g")</td>
                    <td>@cita.Descripción</td>
                    <td>@cita.Estado</td>
                    <td>@cita.IdCliente</td> <!-- Puedes mostrar más información del cliente si lo deseas -->
                    <td>
                        @if (cita.Estado == "Pendiente")
                        {
                            <!-- Formulario para confirmar cita -->
                            <form action="@Url.Action("ConfirmarCita", "Inicio")" method="post">
                                <input type="hidden" name="id" value="@cita.Id" />
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </form>
                        }
                        <!-- Agregar botón para cancelar cita si lo deseas -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
