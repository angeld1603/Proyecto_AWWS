@model CapaEntidad.Mecanicos

@{
    ViewBag.Title = "Editar Mecánico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body>
    <section class="wrapper">
        <div class="container">
            <h1>Editar Mecánico</h1>
            @using (Html.BeginForm("Editar", "Inicio", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="Número de documento">Número de documento</label>
                    @Html.EditorFor(m => m.NumeroDocumento, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })
                    @Html.ValidationMessageFor(m => m.NumeroDocumento, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Nombre)
                    @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Contraseña)
                    @Html.EditorFor(m => m.Contraseña, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a href="@Url.Action("GestionarMecanicos", "Inicio")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </section>
</body>
</html>

<style>
    /* Same styles from the "Gestionar Mecánicos" view */
    .wrapper {
        padding: 20px;
        background-color: #f5f8fa;
        min-height: 100vh;
    }

        .wrapper h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #31bc71;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 0;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
    }

    .btn {
        margin: 0 5px;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #31bc71;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #28a745;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .fixed-bottom {
        background-color: #D0D1D5;
        padding: 1rem;
    }

    footer {
        margin: 0;
        padding: 10px 0;
        color: #333;
    }
</style>
