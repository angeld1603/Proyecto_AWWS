@{
    ViewBag.Title = "Página Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- En el <head> de tu _Layout.cshtml -->
<div class="carousel-container">
    <div class="carousel">
        <div class="carousel-images">
            <img src="~/Content/Images/Imagen1.jpg" alt="Imagen 1" class="active">
            <img src="~/Content/Images/Imagen2.jpg" alt="Imagen 2">
            <img src="~/Content/Images/Imagen3.jpg" alt="Imagen 3">
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const images = document.querySelectorAll('.carousel-images img');
        let currentIndex = 0;

        function showNextImage() {
            images[currentIndex].classList.remove('active');
            currentIndex = (currentIndex + 1) % images.length;
            images[currentIndex].classList.add('active');
        }

        setInterval(showNextImage, 3000); // Cambia la imagen cada 3 segundos
    });
</script>


<style>
    .carousel-container {
        display: flex;
        justify-content: flex-start; /* Alineado a la izquierda */
        align-items: center;
        height: 80vh; /* Ajusta la altura para que no ocupe toda la pantalla */
        overflow: hidden;
        padding-left: 20px; /* Espacio entre el carrusel y el borde izquierdo */
    }

    .carousel {
        width: 50%; /* Ajusta el ancho del carrusel */
        height: 60vh; /* Ajusta la altura del carrusel */
        margin-left: 0; /* Alineado a la izquierda */
        position: relative;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Sombra para destacar el carrusel */
    }

    .carousel-images {
        position: relative;
        width: 100%;
        height: 100%;
    }

        .carousel-images img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%; /* Asegura que las imágenes ocupen toda la altura del carrusel */
            object-fit: cover; /* Mantiene la proporción de las imágenes dentro del recuadro */
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .carousel-images img.active {
                opacity: 1;
                z-index: 1;
            }

</style>