<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="background-image">
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand">Auto Workshop Web Services</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Inicio", "Mecanico")">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Gestionar reparaciones", "Mecanico")">Gestionar Mecánicos</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="background-color: rgba(var(--bs-dark-rgb), var(--bs-bg-opacity))">
                                <li>
                                    <a class="dropdown-item text-light" href="@Url.Action("Login", "Login")">
                                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>

    <div class="container-fluid text-center mt-5 fixed-bottom" style="background-color: #D0D1D5; padding-top: 1rem; padding-bottom: 1rem;">
        <div class="container">
            <footer>AWWS</footer>
        </div>
    </div>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>


<style>
    body.background-image {
        background-image: url('~/Content/Images/fondo.png'); /* Ruta a tu imagen de fondo */
        background-size: cover; /* Ajusta la imagen para cubrir todo el contenedor */
        background-position: center center; /* Centra la imagen */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        min-height: 100vh; /* Asegura que el contenedor tenga al menos la altura de la ventana */
    }

    /* Mantén el resto de tus estilos */

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: grid;
        min-height: 100vh;
        box-sizing: border-box;
    }

    .navbar {
        padding: 15px;
        box-sizing: border-box;
    }

    .navbar-brand {
        font-size: 25px;
        font-weight: bold;
    }

    .navbar-nav .nav-link {
        color: white;
        padding: 8px 20px;
        border-radius: 10px;
        transition: 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            background-color: #575757;
        }

    .dropdown-menu {
        display: none;
        position: absolute;
        top: 100%; /* Coloca el menú justo debajo del ícono */
        right: 0;
        background-color: #00304D;
        border-radius: 5px;
        box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
        min-width: 160px;
        z-index: 1000; /* Asegura que el menú esté por encima de otros elementos */
        padding: 10px 0;
    }

    .dropdown-item {
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        display: block;
        transition: background-color 0.3s;
    }

        .dropdown-item:hover {
            background-color: #575757;
        }

    .dropdown-toggle::after {
        display: none; /* Eliminar el triángulo de despliegue de Bootstrap */
    }
</style>