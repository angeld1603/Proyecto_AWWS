<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="text-start">
                <img decoding="async" src="~/Content/Images/logonavbar.png" class="img-fluid logo-small" alt="logo">
            </div>
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Inicio", "Inicio")">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GestionarMecanicos", "Inicio")">Gestionar Mecánicos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GestionarVehiculos", "Inicio")">Gestionar Vehículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GestionarReparaciones", "Inicio")">Gestionar Reparaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GestionarCitas", "Inicio")">Gestionar Citas</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <div>
                                <a class="text-light" href="@Url.Action("Login", "Login")">
                                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        display: grid;
        min-height: 100vh;
        box-sizing: border-box;
    }

    .logo-small {
        max-width: 170px; /* Ajusta el tamaño del logo */
        height: auto;
        margin-left: 100px; /* Esto empuja la imagen hacia la derecha */
    }

    .navbar {
        padding: 15px;
        background-color: #002D3C;
    }

    .navbar-brand {
        font-size: 25px;
        font-weight: bold;
    }

    .navbar-nav .nav-link {
        color: white;
        padding: 8px 20px;
        border-radius: 10px;
        transition: 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            background-color: #575757;
        }

    /* Mejora del menú desplegable */
    .dropdown-menu {
        display: none;
        position: absolute;
        top: 100%;
        right: 0;
        background-color: #002D3C;
        border-radius: 5px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        min-width: 160px;
        z-index: 1000;
        padding: 10px 0;
    }

    .dropdown-item {
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        display: block;
        transition: background-color 0.3s;
    }

        .dropdown-item:hover {
            background-color: #575757;
        }

    .dropdown-toggle::after {
        display: none;
    }

    /* Estilos responsivos */
    @@media (max-width: 992px) {
        .navbar-brand {
            font-size: 19px;
        }

        .navbar-nav .nav-link {
            font-size: 14px; /* Texto más pequeño en los enlaces */
        }

        .navbar-toggler {
            padding: 5px; /* Espaciado más pequeño para el botón del menú */
        }
        /* Menú desplegable compacto en responsive */
        .dropdown-menu {
            width: 100%; /* Hace que el menú desplegable ocupe todo el ancho */
            position: relative;
            background-color: #002D3C;
            border-radius: 0;
            padding: 0;
        }

        .dropdown-item {
            padding: 10px 20px;
            font-size: 14px; /* Texto más pequeño en el menú desplegable */
        }
    }
</style>