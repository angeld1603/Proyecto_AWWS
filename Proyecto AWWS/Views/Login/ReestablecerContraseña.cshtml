@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecer Contraseña</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <section class="wrapper">
        <div class="container-fluid" style="background-color: #002D3C; color: #fff; padding-top: 1rem; padding-bottom: 1rem;">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <h1 class="display-5">Auto Workshop Web Services</h1>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="container">
            <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 text-center">
                <form action="@Url.Action("ReestablecerContraseña", "Login")" method="post" class="rounded bg-white shadow p-5">
                    <div class="logo">
                        <img decoding="async" src="~/Content/Images/Logo AWWS.png" class="img-fluid" alt="logo">
                    </div>
                    <br />
                    <h3 class="text-dark fw-bolder fs-4 mb-2">Restablecer contraseña</h3>

                    <div class="fw-normal text-muted mb-2">
                        Regresar al inicio de sesión - <a href="@Url.Action("Login", "Login")" class="text-primary fw-bold text-decoration-none">Iniciar sesión aquí</a>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="floatingid" name="idCliente" placeholder="Número de identificación" required>
                        <label for="floatingid">Número de identificación</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="floatingcontraseña" name="contraseña" placeholder="Ingresar la nueva contraseña" required>
                        <label for="floatingcontraseña">Ingresar la nueva contraseña</label>
                    </div>

                    <button type="submit" class="submit_btn w-100 my-4">Restablecer</button>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </section>
</body>
</html>

<style>
    /* Google Poppins Font CDN Link */

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Variables */
    :root {
        --primary-font-family: 'Poppins', sans-serif;
        --light-white: #f5f8fa;
        --gray: #5e6278;
        --gray-1: #e3e3e3;
    }

    body {
        font-family: var(--primary-font-family);
        font-size: 14px;
    }

    /* Main CSS */
    .wrapper {
        padding: 0 0 100px;
        background-image: url("images/bg.png");
        background-position: bottom center;
        background-repeat: no-repeat;
        background-size: contain;
        background-attachment: fixed;
        min-height: 100%;
    }

        .wrapper .logo img {
            max-width: 50%;
        }

        .wrapper input {
            background-color: var(--light-white);
            border-color: var(--light-white);
            color: var(--gray);
        }

            .wrapper input:focus {
                box-shadow: none;
            }

        .wrapper .password-info {
            font-size: 10px;
        }

        .wrapper .submit_btn {
            padding: 10px 15px;
            font-weight: 500;
        }

        .wrapper .login_with {
            padding: 8px 15px;
            font-size: 13px;
            font-weight: 500;
            transition: 0.3s ease-in-out;
        }

            .wrapper .submit_btn:focus,
            .wrapper .login_with:focus {
                box-shadow: none;
            }

            .wrapper .login_with:hover {
                background-color: var(--gray-1);
                border-color: var(--gray-1);
            }

            .wrapper .login_with img {
                max-width: 7%;
            }

    .display-5 {
        font-size: 2rem;
        font-weight: bold;
    }

    .submit_btn {
        background-color: #31bc71;
        border-radius: 15px;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #28a745;
        color: #000;
    }
</style>
